DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/lechefacil
TENANT_HEADER=X-Tenant-ID
LOG_LEVEL=INFO
ENVIRONMENT=dev
JWT_SECRET_KEY=changeme-super-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=60
JWT_ISSUER=https://lechefacil.local
JWT_AUDIENCE=lechefacil-users

# Storage / images (dev defaults)
S3_BUCKET=bucket-name
S3_REGION=us-east-1
S3_PREFIX=prefix/

# Mobile deployments (separate bucket, no prefix)
S3_MOBILE_BUCKET=mobile-bucket-name
S3_MOBILE_PUBLIC_URL_BASE=https://mobile-bucket-name.s3.us-east-1.amazonaws.com
IMAGE_THUMB_SIZES=256,64 
MAX_IMAGE_BYTES=10485760

# CORS (comma-separated list - include capacitor:// for mobile apps)
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,capacitor://localhost,https://localhost,https://lechefacil.gcobena.dev

# Auth cookies (refresh token)
# Set to 'none' and secure=true when frontend and backend are on different origins over HTTPS
COOKIE_SAMESITE=lax
COOKIE_SECURE=false

# Bootstrap API Key (for tenant creation via API)
# Generate a secure random string for production
# This protects the /auth/register-tenant endpoint
BOOTSTRAP_SECRET_KEY=change-me-to-a-secure-random-string-in-production

# Email settings
# Provider: logging | ses | unione
EMAIL_PROVIDER=unione
EMAIL_FROM_NAME=LecheFacil
EMAIL_FROM_ADDRESS=no-reply@lechefacil.gcobena.dev
# Admin notifications (optional, comma-separated list)
EMAIL_ADMIN_RECIPIENTS=admin@yourdomain.com,admin2@yourdomain.com
# Base URL of the frontend for password reset and set-password links
EMAIL_RESET_URL_BASE=https://lechefacil.gcobena.dev
# Email branding (optional)
# EMAIL_PRIMARY_COLOR=#16a34a
# EMAIL_BRAND_LOGO_URL=https://lechefacil.gcobena.dev/logo.png

# UniOne email provider (when EMAIL_PROVIDER=unione)
UNIONE_API_KEY=your-unione-api-key-here
# UNIONE_API_URL=https://us1.unione.io/en/transactional/api/v1/email/send.json  # Optional, defaults to US1 region

# OpenAI (for OCR milk production photos)
OPENAI_API_KEY=sk-proj-...

# Firebase Cloud Messaging (Push Notifications)
# Use HTTP v1 API (recommended) - requires Service Account JSON
FCM_PROJECT_ID=lechefacil
FCM_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"lechefacil",...}

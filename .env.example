DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/lechefacil
TENANT_HEADER=X-Tenant-ID
LOG_LEVEL=INFO
ENVIRONMENT=dev
JWT_SECRET_KEY=changeme-super-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=60
JWT_ISSUER=https://lechefacil.local
JWT_AUDIENCE=lechefacil-users

# Storage / images (dev defaults)
S3_BUCKET=bucket-name
S3_REGION=us-east-1
S3_PREFIX=prefix/

# Mobile deployments (separate bucket, no prefix)
S3_MOBILE_BUCKET=mobile-bucket-name
S3_MOBILE_PUBLIC_URL_BASE=https://mobile-bucket-name.s3.us-east-1.amazonaws.com
IMAGE_THUMB_SIZES=256,64 
MAX_IMAGE_BYTES=10485760

# CORS (comma-separated list)
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Auth cookies (refresh token)
# Set to 'none' and secure=true when frontend and backend are on different origins over HTTPS
COOKIE_SAMESITE=lax
COOKIE_SECURE=false

# Email settings (disabled for now)
# EMAIL_PROVIDER=logging
# EMAIL_FROM_NAME=LecheFacil
# EMAIL_FROM_ADDRESS=no-reply@yourdomain.com
# EMAIL_ADMIN_RECIPIENTS=admin@yourdomain.com

# OpenAI (for OCR milk production photos)
OPENAI_API_KEY=sk-proj-...
